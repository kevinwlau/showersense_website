html(ng-app='dashboard')
head
    link(rel='stylesheet', type='text/css', href='css/bootstrap.min.css')
    link(href='http://yui.yahooapis.com/pure/0.4.2/pure.css', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='css/dashboard.css')
    link(rel='stylesheet', href='css/layouts/marketing.css')
    script(type='text/javascript', src='js/jquery.min.js')
    script(type='text/javascript', src='js/angular.min.js')
    link(href='c3/c3.css', rel='stylesheet', type='text/css')
    script(src='d3/d3.min.js', charset='utf-8')
    script(src='c3/c3.min.js')
    script(type='text/javascript', src='js/angular-dashboard.js')

  body
    //- .header
    //-   .home-menu.pure-menu.pure-menu-open.pure-menu-horizontal.pure-menu-fixed
    //-     a.pure-menu-heading(href='/') ShowerSense
    //-     ul
    //-       li.pure-menu-selected
    //-         a(href='/') Home
    //-       li
    //-         a(href='/auth/facebook') Log In
    include header
    .container-fluid
      .row
        .col-sm-4
          //Personal Stats Panel 
          section(ng-controller='PersonalController as personal')
            .panel.panel-default
              .panel-heading
                h2.panel-title Personal Stats
              .panel-body
                p Last shower water usage: {{personal.lastusage}}
                p Last shower duration: {{personal.lastduration}}
                p Joined: {{personal.datejoined}}
                p Number of showers: {{personal.numshowers}}
          .panel.panel-default
            .panel-heading
              h2.panel-title Edit Friend List
            //end panel-heading 
            .panel-body(ng-controller='LeaderboardController as addRemove')
              form.form-horizontal.col-sm-12(role='form')
                .form-group
                  input#friend.form-control(type='text', placeholder='Friend\'s Name')
                .form-group.text-center
                  .col-sm-6
                    button.btn.btn-success.btn-block(ng-click='addRemove.addFriend()') Add
                  .col-sm-6
                    button.btn.btn-danger.btn-block(ng-click='addRemove.removeFriend()') Remove
        .col-sm-8
          section(ng-controller='TabController as panel')
            .panel.panel-default
              .panel-heading
                h2.panel-title Your Water Usage For {{panel.period}}
              .panel-body
                | {{panel.usagetotal}}
                #usageChart
                  script(type='text/javascript', src='js/usagechartinit.js')
                 
                ul.nav.nav-pills
                  li(ng-class='{ active: panel.isSet(1)}')
                    a(href='', ng-click='panel.setTab(1)') Week
                  li(ng-class='{ active: panel.isSet(2)}')
                    a(href='', ng-click='panel.setTab(2)') Month
                
          section(ng-controller='LeaderboardController as panel')
            .panel.panel-default
              .panel-heading
                h2.panel-title LeaderBoard
            
              .panel-body
                #leaderChart
                  script(type='text/javascript', src='js/leaderchartinit.js')
  include footer